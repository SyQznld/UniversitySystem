<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--校园图层类型-->
        <LinearLayout
            android:id="@+id/ll_layer_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:padding="10dp"
                android:text="图层类型"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_zzsf_wap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/iv_zzsf_wap"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:background="@mipmap/btn_yx_normal" />

                    <TextView
                        android:id="@+id/tv_zzsf_wap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="15dp"
                        android:text="师院影像"
                        android:textColor="#444444"
                        android:textSize="15sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/little_circle" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_gravity="center_vertical"
                        android:background="#afafaf" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_wdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/iv_wdt"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:background="@mipmap/btn_dl_normal" />

                    <TextView
                        android:id="@+id/tv_wdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="15dp"
                        android:text="师院微地图"
                        android:textColor="#444444"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <!--流程图显示-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_flowPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_flowPic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:layout_margin="@dimen/dp_10"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
